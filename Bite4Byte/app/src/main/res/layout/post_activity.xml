<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/postImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/postTitleActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="TEST"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sellerActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="Seller User Name Here"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/postDescActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="blah blah blah blah" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/buyBtn"
            android:onClick="onOrderBtnClick"/>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/feed"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Feed" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/uploadBtnPost"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="UPLOAD" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/messaging"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="DM's" />

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/profile"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:text="Profile"/>

    </LinearLayout>

</LinearLayout>